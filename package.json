{
    "name": "factom-keystore",
    "version": "0.1.0",
    "description": "A keystore for Factom: Factoid keys, Entry Credit keys and Identity keys",
    "main": "src/index.js",
    "scripts": {
        "lint": "eslint \"{src,test}/**/*.js\"",
        "format": "prettier --write \"{src,test}/**/*.js\"",
        "prepublishOnly": "npm run format && npm run lint && npm run test",
        "test": "mocha 'test/*.spec.js'",
        "coverage": "nyc --reporter=html --reporter=text mocha 'test/*.spec.js'",
        "coveralls": "nyc report --reporter=text-lcov | coveralls"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PaulBernier/factom-keystore.git"
    },
    "keywords": [
        "factom",
        "keystore",
        "keys",
        "blockchain",
        "identity",
        "factoid",
        "entrycredit"
    ],
    "author": "Paul Bernier",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PaulBernier/factom-keystore/issues"
    },
    "homepage": "https://github.com/PaulBernier/factom-keystore#readme",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "chai": "^4.2.0",
        "coveralls": "^3.0.3",
        "eslint": "^5.16.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "mocha": "^6.0.2",
        "nyc": "^13.3.0",
        "prettier": "^1.16.4"
    },
    "dependencies": {
        "bip39": "^2.5.0",
        "factom": "^1.0.2",
        "factom-identity-lib": "^0.2.0-rc6",
        "factombip44": "^0.2.0",
        "fast-sha256": "^1.1.0",
        "fs-extra": "^7.0.1",
        "joi": "^14.3.1",
        "tweetnacl": "^1.0.1",
        "tweetnacl-util": "^0.15.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    }
}
